; editorconfig.org
root = true

[*.js]
charset = utf-8
end_of_line = lf
# spaces as indent so that there is no mix with spaces and tabs
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.rst]
trim_trailing_whitespace = false

[*.yml]
indent_style = space

[*.html]
indent_style = tab
indent_size = 4

[*.ts]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

# PSR-2
[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4


